# Development Environment Configuration
FLASK_ENV=development
SECRET_KEY=dev-secret-key-change-in-production
DATABASE_URL=sqlite:///nicotine_tracker_dev.db

# Development Server Settings
FLASK_HOST=0.0.0.0
FLASK_PORT=5050

# Security Settings (Relaxed for development)
WTF_CSRF_ENABLED=False
SESSION_LIFETIME=86400

# Email Configuration for Development
# Gmail Setup (Recommended for development)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-dev-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password
MAIL_DEFAULT_SENDER=your-dev-email@gmail.com

# Development Settings
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads
LOGS_PER_PAGE=20
LOG_TO_STDOUT=True
LOG_LEVEL=DEBUG

# Notification System Configuration
NOTIFICATION_PROCESS_INTERVAL=30
NOTIFICATION_MAX_RETRIES=3
NOTIFICATION_BATCH_SIZE=10
NOTIFICATION_DEBUG=True

# Development Notes:
# 1. For Gmail, enable 2FA and generate an App Password
# 2. Use the App Password in MAIL_PASSWORD, not your regular password
# 3. In development, notifications are logged to console for debugging
# 4. Background tasks should be run manually: python run_background_tasks.py
