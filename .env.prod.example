# Environment Configuration for Production
# Rename this file to .env and fill in the values for your production server.

# Core Flask Settings
FLASK_ENV=production
SECRET_KEY=your-strong-and-unique-secret-key-for-production
SERVER_NAME=yourdomain.com
PREFERRED_URL_SCHEME=https
APPLICATION_ROOT=/

# Database URL (MySQL is recommended for production)
DATABASE_URL=mysql+pymysql://user:password@host:port/dbname

# Session Lifetime (in seconds)
PERMANENT_SESSION_LIFETIME=86400

# CSRF Protection (should be enabled in production)
WTF_CSRF_ENABLED=True

# Email Settings (Required for production)
MAIL_SERVER=
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=

# Notification Service Settings
NOTIFICATION_PROCESS_INTERVAL=30
NOTIFICATION_MAX_RETRIES=3
NOTIFICATION_BATCH_SIZE=10
NOTIFICATION_DEBUG=False

# Logging
LOG_TO_STDOUT=True
LOG_LEVEL=INFO

# Pagination
LOGS_PER_PAGE=20
