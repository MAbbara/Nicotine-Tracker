# Environment Configuration for Development
# Rename this file to .env and fill in the values.

# Core Flask Settings
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-for-development
SERVER_NAME=localhost:5000

# Database URL (SQLite for development)
DATABASE_URL=sqlite:///instance/nicotine_tracker.db

# Email Settings (Optional for development, but required for email features)
# You can use a service like Mailtrap or a local SMTP server for testing.
MAIL_SERVER=
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=
