# Production Environment Configuration
FLASK_ENV=production

# Security (MUST be set to a strong secret key)
SECRET_KEY=your-strong-production-secret-key-here

# Database (Production database URL - PostgreSQL/MySQL recommended)
DATABASE_URL=pymysql://username:password@localhost/nicotine_tracker_prod

# Session Configuration
SESSION_LIFETIME=86400

# Production Settings (Enhanced Security)
WTF_CSRF_ENABLED=True

# Logging (stdout for production deployment)
LOG_TO_STDOUT=True
LOG_LEVEL=INFO

# Pagination
LOGS_PER_PAGE=20

# Email Configuration (Required for production)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-production-email@domain.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@yourdomain.com
