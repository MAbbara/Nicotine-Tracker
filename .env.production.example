# Production Environment Configuration
FLASK_ENV=production
SECRET_KEY=your-strong-production-secret-key-here
DATABASE_URL=postgresql://username:password@localhost/nicotine_tracker_prod

# Production Server Settings
FLASK_HOST=127.0.0.1
FLASK_PORT=5050

# Security Settings (Enhanced for production)
WTF_CSRF_ENABLED=True
SESSION_LIFETIME=86400

# Email Configuration for Production
# Production SMTP Settings
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-production-email@domain.com
MAIL_PASSWORD=your-secure-app-password
MAIL_DEFAULT_SENDER=noreply@yourdomain.com

# Production Settings
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=/var/www/nicotine-tracker/uploads
LOGS_PER_PAGE=20
LOG_TO_STDOUT=True
LOG_LEVEL=INFO

# Notification System Configuration
NOTIFICATION_PROCESS_INTERVAL=60
NOTIFICATION_MAX_RETRIES=5
NOTIFICATION_BATCH_SIZE=25
NOTIFICATION_DEBUG=False

